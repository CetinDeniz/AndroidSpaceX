<resources>
    <!-- Base application theme. -->
    <style name="Theme.SpaceXFan" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="Theme.SpaceXFan.Splash" parent="@style/Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <color name="transparent_black">#00000000</color>

    <style name="MyActionBar" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="android:background">@color/transparent_black</item>
        <!--For compatibility-->
        <item name="background">@color/transparent_black</item>
    </style>
</resources>